# ComplyArk Production Environment Variables
# Copy this file to .env and fill in the values

# Database
DB_USER=ark
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=ark_db

# Authentication (generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET

# Admin Portal
ADMIN_API_URL=https://admin-api.yourdomain.com
ADMIN_CORS_ORIGINS=https://admin.yourdomain.com

# Tenant Platform
TENANT_API_URL=https://api.yourdomain.com
TENANT_CORS_ORIGINS=https://app.yourdomain.com
LOADER_URL=https://cdn.yourdomain.com/loader.js

# Email (for invitations)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com
