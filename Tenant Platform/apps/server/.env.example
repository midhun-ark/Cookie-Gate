# Tenant Platform Server Environment Variables

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=ark_db
DB_USER=ark
DB_PASSWORD=arkpass

# JWT Authentication
JWT_SECRET=change-this-to-a-strong-secret-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5174,http://localhost:5173

# Session/Cookies
SESSION_SECRET=change-this-to-a-strong-secret-in-production
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Translation Service (optional)
TRANSLATION_API_URL=
