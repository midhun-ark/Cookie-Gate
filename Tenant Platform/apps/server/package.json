{
    "name": "tenant-server",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "migrate:create": "node-pg-migrate create",
        "migrate:up": "DATABASE_URL=postgres://postgres:password@localhost:5445/complyark node-pg-migrate up",
        "migrate:down": "DATABASE_URL=postgres://postgres:password@localhost:5445/complyark node-pg-migrate down",
        "start": "ts-node src/app.ts",
        "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "@fastify/cookie": "^9.3.1",
        "@fastify/cors": "^9.0.1",
        "@fastify/jwt": "^8.0.0",
        "@fastify/sensible": "^5.5.0",
        "bcrypt": "^5.1.1",
        "dotenv": "^17.2.3",
        "fastify": "^4.26.1",
        "pg": "^8.11.3",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.0.0",
        "@types/pg": "^8.10.0",
        "jest": "^29.7.0",
        "node-pg-migrate": "^6.2.2",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    }
}